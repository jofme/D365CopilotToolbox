			<Method>
				<Name>findForApplicationArea</Name>
				<Source><![CDATA[
    /// <summary>
    /// Finds the parameter record associated with the specified application area.
    /// If no mapping exists for the requested area, the `Fallback` application area is used.
    /// </summary>
    public static COTXCopilotAgentParameters findForApplicationArea(COTXCopilotAgentApplicationArea _applicationArea, boolean _forUpdate = false)
    {
        COTXCopilotAgentApplicationAreas mapping;
        COTXCopilotAgentParameters record;

        // try requested area
        mapping = COTXCopilotAgentApplicationAreas::find(_applicationArea, false);
        if (mapping && mapping.AgentParameter)
        {
            record.selectForUpdate(_forUpdate);
            select firstonly record
                where record.RecId == mapping.AgentParameter;

            if (record.RecId)
            {
                return record;
            }
        }

        // fallback to Fallback area
        mapping = COTXCopilotAgentApplicationAreas::find(COTXCopilotAgentApplicationArea::Fallback, false);
        if (mapping && mapping.AgentParameter)
        {
            record.selectForUpdate(_forUpdate);
            select firstonly record
                where record.RecId == mapping.AgentParameter;

            return record;
        }

        return record;
    }

]]></Source>
